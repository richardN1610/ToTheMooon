    <div class="sign-up-form">
        <div class="sign-up-title">
            <span>Sign Up</span>
        </div>
        <form action="#" id="signup-form">
            <div class="first-name">
                <input type="text" class="f-name" id="f-name" placeholder="Full Name" autocomplete="off" required >
            </div>
            <div class="signup-password">
                <input type="password" class="s-password" id="s-password" placeholder="Password"  autocomplete="off" required>
            </div>
            <div class="mobile">
                <input type="text" class="mobile-number" id="mobile-number" placeholder="Mobile Number" autocomplete="off" required>
            </div>
            <div class="email">
                <input type="email" name="email" id="email-address" placeholder="Email Address" autocomplete="off" required>
            </div>
            <div class="sign-up-btn">
                <button class="s-btn" type="submit">Sign Up&#8594</button>
            </div>
        </form>

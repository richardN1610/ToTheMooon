    <div class="login-form">
        <div class="login-title">
            <span>Login</span>
        </div>
        <form action="#" id="l-form">
            <div class="login-id-div">
                <input type="text" placeholder="Email Address" class="login-id" id="login-id" required>
            </div>
            <div class="login-password-div">
                <input type="password" placeholder="Password" class="login-password" id="login-password" required>
            </div>
